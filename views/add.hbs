<h1>Add</h1>

<form method="POST" action="/add">
     <div class="input-field">
          <input placeholder="Placeholder" name="title" id="title" type="text" class="validate" required>
          <label for="title">title</label>
           <span class="helper-text" data-error="add title">Helper text</span>
        </div>

         <div class="input-field">
          <input placeholder="Placeholder" name="price" id="price" type="number" class="validate" required> 
          <label for="price">price</label>
           <span class="helper-text" data-error="add price">Helper text</span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">

           <div class="input-field">
          <input placeholder="Placeholder" name="img" id="img" type="text" class="validate" required>
          <label for="img">image</label>
           <span class="helper-text" data-error="add img">Helper text</span>

          <button type="submit" class="btn btn-primary">Add courses</button>
        </div>
</form>