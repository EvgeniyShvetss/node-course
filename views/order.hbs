<h1>My Orders</h1>

{{#if orders.length}}
    {{#each orders}}
    <div class="row">
        <div class="col s6 offset-s3">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">
                         Order {{_id}}
                    </span>

                    <p>Date:  {{date}}</p>
                    <p>email: {{user.name}} ({{user.email}})</p>
                    {{!-- <ol>
                        {{#each courses}}
                            <li>{{course.title}}: {{course.count}} {{course.price}}</li>
                        {{/each}}
                    </ol> --}}

                    <hr>

                    <p>Price: <span class="price">{{price}}</span></p>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
{{else}}
    <p>Cart is empty</p>
{{/if}}